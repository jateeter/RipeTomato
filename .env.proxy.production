# Production Environment Configuration for CORS Proxy Server
# Copy to .env.proxy and customize for your production environment

# Server Configuration
PORT=3001
NODE_ENV=production

# CORS Configuration (Update with your production domains)
ALLOWED_ORIGINS=https://your-app.com,https://www.your-app.com,https://staging.your-app.com

# Rate Limiting (More restrictive in production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# Logging
LOG_LEVEL=warn
LOG_REQUESTS=false

# Security
TRUST_PROXY=true
HELMET_CSP=false

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HMIS_HEALTH_CHECK_ENABLED=true

# Proxy Timeouts
PROXY_TIMEOUT=25000
PROXY_RETRY_ATTEMPTS=2

# SSL/TLS Configuration (if serving HTTPS directly)
# SSL_KEY_PATH=/path/to/ssl/private.key
# SSL_CERT_PATH=/path/to/ssl/certificate.crt
# SSL_CA_PATH=/path/to/ssl/ca-bundle.crt