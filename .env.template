# Environment Variables Template
# Copy this file to .env and fill in your actual values
# Never commit the .env file to version control

# ==============================================
# BASIC APPLICATION CONFIGURATION
# ==============================================
NODE_ENV=development
PORT=3000
REACT_APP_BASE_URL=http://localhost:3000

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=idaho_shelter
DB_USERNAME=shelter_user
DB_PASSWORD=your_secure_password_here
DB_SSL=false

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# ==============================================
# GOOGLE SERVICES CONFIGURATION
# ==============================================
# Get these from https://console.developers.google.com/
REACT_APP_GOOGLE_CLIENT_ID=your-google-client-id-here
REACT_APP_GOOGLE_API_KEY=your-google-api-key-here

# ==============================================
# SOLID POD CONFIGURATION
# ==============================================
REACT_APP_SOLID_REDIRECT_URL=http://localhost:3000/solid-callback

# ==============================================
# HAT (HUB OF ALL THINGS) CONFIGURATION
# ==============================================
HAT_CLIENT_ID=your_hat_client_id_here
HAT_CLIENT_SECRET=your_hat_client_secret_here
HAT_REDIRECT_URI=http://localhost:3000/hat/callback

# ==============================================
# APPLE SERVICES CONFIGURATION
# ==============================================
APPLE_TEAM_ID=your_apple_team_id_here
APPLE_PASS_TYPE_CERT_PATH=./certificates/pass_type_cert.pem
APPLE_WWDR_CERT_PATH=./certificates/wwdr_cert.pem

# ==============================================
# TWILIO CONFIGURATION
# ==============================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here
TWILIO_SMS_WEBHOOK_URL=http://localhost:3000/api/twilio/sms
TWILIO_SMS_STATUS_CALLBACK=http://localhost:3000/api/twilio/sms/status
TWILIO_VOICE_WEBHOOK_URL=http://localhost:3000/api/twilio/voice
TWILIO_VOICE_STATUS_CALLBACK=http://localhost:3000/api/twilio/voice/status

# ==============================================
# EMAIL SERVICE CONFIGURATION
# ==============================================
EMAIL_API_KEY=your_email_api_key_here
EMAIL_FROM_ADDRESS=noreply@idaho-shelter.org
EMAIL_FROM_NAME=Idaho Community Shelter

# ==============================================
# HMIS INTEGRATION (OPTIONAL)
# ==============================================
HMIS_ENABLED=false
HMIS_API_URL=https://your-hmis-provider.com/api
HMIS_API_KEY=your_hmis_api_key_here
HMIS_CLIENT_ID=your_hmis_client_id_here
HMIS_CLIENT_SECRET=your_hmis_client_secret_here

# ==============================================
# EMERGENCY SERVICES
# ==============================================
NON_EMERGENCY_NUMBER=+1-208-555-0100
PRIMARY_HOSPITAL_CONTACT=+1-208-555-0200
PRIMARY_HOSPITAL_API=https://hospital-api.example.com

# ==============================================
# COMMUNITY SERVICES
# ==============================================
FOOD_BANK_CONTACT=+1-208-555-0300
FOOD_BANK_API=https://foodbank-api.example.com

# ==============================================
# MONITORING AND ANALYTICS
# ==============================================
APM_PROVIDER=datadog
APM_API_KEY=your_apm_api_key_here
ERROR_TRACKING_PROVIDER=sentry
ERROR_TRACKING_DSN=your_sentry_dsn_here
ANALYTICS_PROVIDER=google
ANALYTICS_TRACKING_ID=your_google_analytics_id_here

# ==============================================
# BACKUP AND STORAGE
# ==============================================
BACKUP_PROVIDER=aws_s3
BACKUP_BUCKET=idaho-shelter-backups
BACKUP_ACCESS_KEY=your_backup_access_key_here
BACKUP_SECRET_KEY=your_backup_secret_key_here

STORAGE_PROVIDER=local
STORAGE_BUCKET=idaho-shelter-files
STORAGE_ACCESS_KEY=your_storage_access_key_here
STORAGE_SECRET_KEY=your_storage_secret_key_here

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# ==============================================
# DEVELOPMENT/TESTING ONLY
# ==============================================
# Set to true for development/testing environments
MOCK_EXTERNAL_SERVICES=true
DEBUG_MODE=true
